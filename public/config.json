{
    "workflowApiVersion": "1.1",
    "metaData":
    {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "custom"
    },

    "type": "REST",
    "lang":
    {
        "en-US":
        {
            "name": "Domain Throttle Activity",
            "description": "Domain Throttle Activity",
            "step1Label": "Configure Activity"
        }
    },
    "arguments":
    {
        "execute":
        {
            "inArguments": [
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                  },
                  {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                  }
            ],
            "outArguments": [{
                "foundSignupDate": ""
              }],
            "url": "https://custom-node-test-new.vercel.app/journeybuilder/execute",
            "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    
    "configurationArguments":
    {
       
        "save":
        {
            "url": "https://custom-node-test-new.vercel.app/journeybuilder/save",
            "verb": "POST",
            "useJwt": true
        },
        "publish":
        {
            "url": "https://custom-node-test-new.vercel.app/journeybuilder/publish",
            "verb": "POST",
            "useJwt": true
        },
        "stop":
        {
            "url": "https://custom-node-test-new.vercel.app/journeybuilder/stop",
            "verb": "POST",
            "useJwt": true
        },
        "validate":
        {
            "url": "https://custom-node-test-new.vercel.app/journeybuilder/validate",
            "verb": "POST",
            "useJwt": true
        }
    },
  
    "userInterfaces":
    {
        "configModal": {
            "height": 700,
            "width": 1000,
            "fullscreen": false
        }
    },
    "schema": 
    {
        "arguments":{
            "execute": {
                "inArguments": [{
                    "phoneNumber": {
                      "dataType": "Phone",
                      "isNullable": false,
                      "direction": "in"
                    }
                  },
                  {
                    "emailAddress": {
                      "dataType": "Email",
                      "isNullable": false,
                      "direction": "in"
                    }
                  }],
                "outArguments": [{
                    "foundSignupDate": {
                      "dataType": "Date",
                      "direction": "out",
                      "access": "visible"
                    }
                  }]
            }
        }
    }
}
